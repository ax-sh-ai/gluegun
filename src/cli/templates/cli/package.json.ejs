{
  "name": "<%= props.name %>",
  "version": "0.0.1",
  "description": "<%= props.name %> CLI",
  "private": true,
  <% if (props.language === "typescript") { %>
    "types": "build/types/types.d.ts",
  <% } %>
  "bin": {
    "<%= props.name %>": "bin/<%= props.name %>"
  },
  "scripts": {
    <% if (props.language === "typescript") { %>
      "clean-build": "rimraf -rf ./build",
      "compile": "tsgo -p .",
      "copy-templates": "copyfiles ./src/templates/* ./build/templates",
      "build": "nr clean-build && nr compile && nr copy-templates",
      "prepublishOnly": "nr build",
      "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    <% } else { %>
      "format": "eslint \"**/*.{js,jsx}\" --fix && prettier \"**/*.{js,jsx,json}\" --write",
    <% } %>
    "test": "vitest run",
    "watch": "vitest --watch",
    "snapupdate": "vitest --updateSnapshot",
    "coverage": "vitest --coverage"
  },
  "files": [
    <% if (props.language === "typescript") { %>
      "build",
    <% } else { %>
      "src",
    <% } %>
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "gluegun": "latest",
    "spacetime": "^7.11.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    <% if (props.language === "typescript") { %>
      "@types/node": "^12.7.11",
      "@typescript-eslint/eslint-plugin": "^4.17.0",
      "@typescript-eslint/parser": "^4.17.0",
      "typescript": "~5.9.3",
      "@typescript/native-preview": "^7.0.0-dev.20260107.1",
    <% } %>
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^5.1.3",
    "prettier": "^3.7.4",
    "pretty-quick": "^4.2.2",
    "app-root-path": "^3.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.21.0",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
